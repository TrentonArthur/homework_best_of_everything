<div class="page-header">
  <h1>Add Dish</h1>
</div>

<form action="/create_dish" class="form-horizontal">
  <!-- Label and input for name -->
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">
      Name
    </label>
    <div class="col-sm-10">
      <input type="text" id="name" name="name" placeholder="Name" class="form-control">
    </div>
  </div>

  <!-- Label and input for cuisine_id -->
  <div class="form-group">
    <label for="cuisine_id" class="col-sm-2 control-label">
      Cuisine ID
    </label>
    <div class="col-sm-10">
      <input type="text" id="cuisine_id" name="cuisine_id" placeholder="Cuisine ID" class="form-control">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Dish" class="btn btn-primary">
    </div>
  </div>
</form>
